{% set page_title = 'Log In' %}
{{ include('/shared/header.twig') }}
{{ include('/shared/navigation.twig') }}
<div class="container py-4 text-center">
    <main class="w-75 mx-auto">
        <h1>Log In</h1>
        {% if session.is_valid_user is not defined %}
            <form action="." method="post" id="log_in_form" class="text-left mx-auto">
                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" class="form-control" name="username" value="{{ username|e }}">
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" name="password" value="{{ password|e }}">
                </div>
                <div class="form-group">
                    <input type="submit" name="action" value="Log in" class="btn btn-primary form-submit">
                </div>
            </form>
        {% endif %}
        {% if log_in_error_message is not empty %}
            <p class="alert alert-danger log-in-alert mt-4 mx-auto">{{ log_in_error_message|e }}</p>  
        {% elseif log_in_success_message is not empty %}
            <p class="alert alert-success log-in-alert mt-4 mx-auto">{{ log_in_success_message|e }}</p>  
        {% endif %}
    </main>
</div>
{{ include('/shared/footer.twig') }}