{{ include('/shared/header.twig') }}
{{ include('/shared/navigation.twig') }}
<div class="container py-4 text-center">
    <main class="mx-auto px-5">
        <h1>Order Now</h1> 
        {% if session.is_valid_user is not defined %}
            <p class="alert alert-warning log-in-alert mt-4 mx-auto">You must be logged in to order. <a href=".?action=Show Log In">Log in now</a> or <a href=".?action=Show Sign Up">sign up for an account</a></p>
        {% else %}
            {% if order_error_message is not empty %}
            <p class="alert alert-danger order-alert mt-4 mx-auto">{{ order_error_message|e }}</p>  
            {% endif %}
             {% if show_total_table == true %}
                <div class="order-total text-left mt-5">
                    <table class="table table-bordered table-sm mb-4">
                        <thead class="thead-dark">
                            <tr>
                                <th class="label" colspan="2">Order Summary</th>
                            </tr>
                        </thead>
                        {% for line_item in line_items %}
                            {% if line_item[2] > 0 %}
                                <tr>
                                    <td class="label">{{ line_item[0]}} <span class="color-highlight">x</span> {{ line_item[1] }}</td>
                                    <td class="result">${{ line_item[2]|number_format(2) }}</td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        <tr>
                            <td class="label">Subtotal</td>
                            <td class="result">${{ subtotal|number_format(2) }}</td>
                        </tr>
                        <tr>
                            <td class="label">Taxes</td>
                            <td class="result">${{ tax|number_format(2) }}</td>
                        </tr>
                        <tr class="total bg-custom-light">
                            <td class="label font-weight-bold">Total: </td>
                            <td class="result font-weight-bold">${{ total|number_format(2) }}</td>
                        </tr>
                    </table>
                </div>
            {% endif %}
            <form action="." method="post" id="order_form" class="text-left mx-auto">
                <h2 class="d-inline-block mt-3">Meal Selection</h2>
                <div class="meal-card-container row card-deck mt-3">
                    {% for meal_plan in meal_plans %}
                        <div class="col-lg-4 col-md-6 d-flex px-0 card-col">
                            <div class="card">
                                <img class="card-img-top" src="./view/images/{{ meal_plan.planImage|e }}">
                                <div class="card-body text-center">
                                    <h2 class="card-title">{{ meal_plan.planName|e }}</h2>
                                    <div class="form-group">
                                        <div class="col"><span class="font-weight-bold">Breakfast</span> - <span class="font-italic">${{ meal_plan.breakfastPrice }}/ea.</span></div>
                                        <div class="col d-flex justify-content-center pt-2"><label for="meal-{{ meal_plan.planID|e }}-breakfast-quantity" class="pr-2">Qty:</label><input class="form-control order-quantity" type="text" name="meal-{{ meal_plan.planID|e }}-breakfast-quantity" value=""></div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col"><span class="font-weight-bold">Lunch</span> - <span class="font-italic">${{ meal_plan.lunchPrice|e }}/ea.</span></div>
                                        <div class="col d-flex justify-content-center pt-2"><label for="meal-{{ meal_plan.planID|e }}-lunch-quantity" class="pr-2">Qty:</label><input class="form-control order-quantity" type="text" name="meal-{{ meal_plan.planID|e }}-lunch-quantity" value=""></div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col"><span class="font-weight-bold">Dinner</span> - <span class="font-italic">${{ meal_plan.dinnerPrice|e }}/ea.</span></div>
                                        <div class="col d-flex justify-content-center pt-2"><label for="meal-{{ meal_plan.planID|e }}-dinner-quantity" class="pr-2">Qty:</label><input class="form-control order-quantity" type="text" name="meal-{{ meal_plan.planID|e }}-dinner-quantity" value=""></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <h2 class="d-inline-block mt-3">Add-On Selection</h2>
                <div class="meal-card-container row card-deck mt-3">
                    {% for add_on in add_ons %}
                        <div class="col-lg-4 col-md-6 d-flex px-0 card-col">
                            <div class="card">
                                <img class="card-img-top" src="./view/images/{{ add_on.addOnImage|e }}" alt="Standard">
                                <div class="card-body text-center">
                                    <h2 class="card-title px-2">{{ add_on.addOnName|e }}</h2>
                                    <div class="form-group">
                                        <div class="col"><span class="font-italic">${{ add_on.addOnPrice|e }}/ea.</span></div>
                                        <div class="col d-flex justify-content-center pt-2"><label for="add-on-{{ add_on.addOnID|e }}-quantity" class="pr-2">Qty:</label><input class="form-control order-quantity" type="text" name="add-on-{{ add_on.addOnID|e }}-quantity"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <h2 class="d-inline-block mt-3">Pickup or Delivery</h2>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="pickupOrDelivery" id="pickupOrDelivery1" value="pickup" checked>
                        <label class="form-check-label" for="pickupOrDelivery1">
                            Pickup <span class="font-italic">(free)</span>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="pickupOrDelivery" id="pickupOrDelivery2" value="delivery">
                        <label class="form-check-label" for="pickupOrDelivery2">
                            Delivery <span class="font-italic">($5)</span>
                            <p class="small">Delivery is only available to the following zip codes: {% for zip_code in zip_codes %} {{ zip_code.zipCode|e }}{% endfor %}. Order will be delivered to the address in your profile.</p>
                        </label>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col text-center"><input type="submit" name="action" value="Calculate total" class="btn btn-secondary form-submit"></div>
                    <div class="col text-center"><input type="submit" name="action" value="Submit order" class="btn btn-primary form-submit"></div>
                </div>
            </form>
        {% endif %}
    </main>
</div>
{{ include('/shared/footer.twig') }}